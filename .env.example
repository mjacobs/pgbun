# .env.example: Default environment variables for pgbun Docker development environment
# Copy to .env and customize as needed

# pgbun Pooling Configuration
POOL_MODE=session  # 'session', 'transaction', or 'statement'
MAX_CLIENT_CONN=100
POOL_SIZE=25

# Connection Timeouts (ms)
SERVER_CONNECT_TIMEOUT=15000  # 15s
CLIENT_LOGIN_TIMEOUT=60000    # 60s
SERVER_IDLE_TIMEOUT=600000    # 10min
CLIENT_IDLE_TIMEOUT=0         # Disabled

# Server Settings
LISTEN_PORT=6432
SERVER_HOST=postgres
SERVER_PORT=5432

# Database (overridden by docker-compose)
DB_NAME=pgbun_test
DB_USER=pgbun_user
DB_PASSWORD=pgbun_pass

# Test Runner Defaults (used in scripts)
DEFAULT_CONCURRENCY=50
DEFAULT_DURATION=30