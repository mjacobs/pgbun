{
  "name": "pgbun",
  "version": "0.1.0",
  "description": "PostgreSQL connection pool and proxy built with Bun",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun --minify",
    "start": "bun run dist/index.js",
    "compile": "bun build src/index.ts --compile --outfile pgbun"
  },
  "keywords": [
    "postgresql",
    "connection-pool",
    "proxy",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "pg": "^8.16.3"
  }
}
